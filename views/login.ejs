<%- await include('views/partials/header.ejs', { title: 'Login' }) %>

    <form action="?" method="POST "style="width:100%;max-width: 400px;margin: 50px auto 0;" id="login-user-form">
      <h1>Login</h1>
      <div class="form-group">
        <label for="Email">Email</label>
        <input type="email"  class="form-control" name="firstname" id="email" required>
      </div>

      <div class="form-group">
        <label for="Password">Password</label>
        <input type="password"  class="form-control" name="pass" id="pass" required>
      </div>

      <button type="submit" id="login-user" class="btn btn-primary">Submit</button>

    </form>

<%- await include('views/partials/footer.ejs', {}) %>